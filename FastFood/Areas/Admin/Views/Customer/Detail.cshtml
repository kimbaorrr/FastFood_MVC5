@using FastFood.Models;
@using X.PagedList;
@using FastFood.DB;
@{
    var ctKh = ViewBag.ChiTietKhachHang as FastFood_KhachHang_ChiTiet;
    var donhangs = ctKh.DonHangs as IEnumerable<DonHang>;
}

<!-- Start Container Fluid -->
<div class="container-xxl">


    <div class="row">
        <div class="col-lg-4">
            <div class="card overflow-hidden">
                <div class="card-body">
                    <div class="bg-primary profile-bg rounded-top p-5 position-relative mx-n3 mt-n3">
                        <img src="@ctKh.AnhDD" alt="" class="avatar-lg border border-light border-3 rounded-circle position-absolute top-100 start-0 translate-middle ms-5">
                    </div>
                    <div class="mt-4 pt-3">
                        <h4 class="mb-1"> @ctKh.HoTenKhachHang<i class="bx bxs-badge-check text-success align-middle"></i></h4>
                        <div class="mt-2">
                            <a href="#!" class="link-primary fs-15"></a>
                            <p class="fs-15 mb-1 mt-1"><span class="text-dark fw-semibold">Email : </span> @ctKh.Email</p>
                            <p class="fs-15 mb-0 mt-1"><span class="text-dark fw-semibold">Số điện thoại : </span> @ctKh.SoDienThoai</p>
                            <p class="fs-15 mb-0 mt-1"><span class="text-dark fw-semibold">Thời gian gắn bó : </span> @ctKh.ThoiGianGanBo ngày</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <div>
                        <h4 class="card-title">Thông tin chi tiết</h4>
                    </div>
                    <div>
                        @{
                            if (ctKh.HoatDongGanDay == 0)
                            {
                                <span class="badge bg-danger-subtle text-danger px-2 py-1">Chưa hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-success-subtle text-success px-2 py-1">Hoạt động @ctKh.HoatDongGanDay giờ trước</span>
                            }
                        }

                    </div>

                </div>
                <div class="card-body py-2">
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <tbody>
                                <tr>
                                    <td class="px-0">
                                        <p class="d-flex mb-0 align-items-center gap-1 fw-semibold text-dark">Mã khách hàng : </p>
                                    </td>
                                    <td class="text-dark fw-medium px-0">@ctKh.MaKhachHang</td>
                                </tr>
                                <tr>
                                    <td class="px-0">
                                        <p class="d-flex mb-0 align-items-center gap-1 fw-semibold text-dark">Ngày sinh : </p>
                                    </td>
                                    <td class="text-dark fw-medium px-0">@ctKh.NgaySinh</td>
                                </tr>
                                <tr>
                                    <td class="px-0">
                                        <p class="d-flex mb-0 align-items-center gap-1 fw-semibold text-dark"> Email : </p>
                                    </td>
                                    <td class="text-dark fw-medium px-0">@ctKh.Email</td>
                                </tr>
                                <tr>
                                    <td class="px-0">
                                        <p class="d-flex mb-0 align-items-center gap-1 fw-semibold text-dark"> Địa chỉ giao hàng : </p>
                                    </td>
                                    <td class="text-dark fw-medium px-0">@ctKh.DiaChi</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <h4 class="card-title mb-2 d-flex align-items-center gap-2">Tổng hóa đơn</h4>
                                    <p class="text-muted fw-medium fs-22 mb-0">@ctKh.TongHoaDon đ</p>
                                </div>
                                <div>
                                    <div class="avatar-md bg-primary bg-opacity-10 rounded">
                                        <iconify-icon icon="solar:bill-list-bold-duotone" class="fs-32 text-primary avatar-title"></iconify-icon>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <h4 class="card-title mb-2 d-flex align-items-center gap-2">Tổng chi tiêu</h4>
                                    <p class="text-muted fw-medium fs-22 mb-0">@ctKh.TongChiTieu đ</p>
                                </div>
                                <div>
                                    <div class="avatar-md bg-primary bg-opacity-10 rounded">
                                        <iconify-icon icon="solar:box-bold-duotone" class="fs-32 text-primary avatar-title"></iconify-icon>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <h4 class="card-title mb-2 d-flex align-items-center gap-2">Chi tiêu lớn nhất</h4>
                                    <p class="text-muted fw-medium fs-22 mb-0">@ctKh.ChiTieuLonNhat đ</p>
                                </div>
                                <div>
                                    <div class="avatar-md bg-primary bg-opacity-10 rounded">
                                        <iconify-icon icon="solar:chat-round-money-bold-duotone" class="fs-32 text-primary avatar-title"></iconify-icon>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Lịch sử đặt đơn & thanh toán</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0 table-hover table-centered">
                            <thead class="bg-light-subtle">
                                <tr>
                                    <th>Mã đơn hàng</th>
                                    <th>Ngày đặt</th>
                                    <th>Người bán</th>
                                    <th>Tổng thanh toán</th>
                                    <th>Trạng thái đơn</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var dh in donhangs)
                                {
                                    <tr>
                                        <td><a href="@Url.Action("Detail", "Order", new {area = "Admin", id = dh.MaDonHang, return_url = Request.Url.AbsoluteUri})" class="text-body">@dh.MaDonHang</a> </td>
                                        <td>@dh.NgayDat</td>
                                        <td>@(dh.NguoiBan != null ? $"{dh.NhanVien.HoDem} {dh.NhanVien.TenNhanVien}" : string.Empty)</td>
                                        <td class="text-red fw-bold">@dh.TongTienSanPham đ</td>
                                        <td>@dh.TrangThaiDonHang.TenTrangThai</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer border-top">
                    <ul class="pagination pagination-rounded m-0 justify-content-end">
                        <!-- Previous Page Link -->
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("List", "Product", new { area = "Admin", page = ViewBag.CurrentPage - 1 })">
                                    Trước đây
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Trước đây</span>
                            </li>
                        }

                        <!-- Page Numbers -->
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            if (i == ViewBag.CurrentPage)
                            {
                                <li class="page-item active">
                                    <span class="page-link">@i</span>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("List", "Product", new { area = "Admin", page = i })">@i</a>
                                </li>
                            }
                        }

                        <!-- Next Page Link -->
                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("List", "Product", new { area = "Admin", page = ViewBag.CurrentPage + 1 })">
                                    Tiếp theo
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Tiếp theo</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>


</div>
